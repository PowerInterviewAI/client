{
  "name": "power-interview",
  "private": true,
  "version": "0.9.0",
  "main": "electron-dist/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "prepare": "node -e \"const cp=require('child_process'); try{const root=cp.execSync('git rev-parse --show-toplevel').toString().trim(); cp.execSync('npx husky install '+root.replace(/\\\\/g,'/')+'/app/.husky',{stdio:[0,1,2], cwd: root});}catch(e){}\"",
    "format": "prettier --write .",
    "preview": "vite preview",
    "electron:build-main": "tsc -p tsconfig.electron.json && node -e \"const fs=require('fs');const path=require('path');const dir='electron-dist';fs.readdirSync(dir).forEach(f=>{if(f.endsWith('.js')){fs.renameSync(path.join(dir,f),path.join(dir,f.replace('.js','.cjs')))}})\"",
    "electron:dev": "pnpm run electron:build-main && concurrently \"cross-env BROWSER=none pnpm run dev -- --port 5173 --strictPort\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "pnpm run electron:build-main && pnpm run build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "build": {
    "appId": "com.powerinterview.app",
    "productName": "Power Interview",
    "copyright": "Copyright Â©2026 Power Interview",
    "files": [
      "dist/**",
      "electron-dist/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}